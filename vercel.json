{
  "builds": [
    {
      "src": "pocketworlds/server/main.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": "**/node_modules/**"
      }
    },
    {
      "src": "pocketworlds/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "pocketworlds/server/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "pocketworlds/client/dist/$1"
    }
  ],
  "framework": "vite"
}